{
  "mcpServers": {
    "perplexity-official": {
      "command": "/Users/user/.nvm/versions/node/v20.18.1/bin/npx",
      "args": ["-y", "server-perplexity-ask"],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      }
    },
    "brave-search": {
      "command": "/Users/user/.nvm/versions/node/v20.18.1/bin/npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      }
    },
    "sequential-thinking": {
      "command": "/Users/user/.nvm/versions/node/v20.18.1/bin/npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "zen-mcp": {
      "command": "uvx",
      "args": [
        "--from", 
        "git+https://github.com/BeehiveInnovations/zen-mcp-server.git", 
        "zen-mcp-server"
      ],
      "env": {
        "GEMINI_API_KEY": "AIzaSyBFmnIkxmoU_fT_8VSWfv3M8nmo4_ItHgI",
        "OPENAI_API_KEY": "${OPENAI_API_KEY}",
        "DISABLED_TOOLS": "analyze,refactor,testgen,secaudit,docgen,tracer",
        "DEFAULT_MODEL": "auto",
        "LOG_LEVEL": "INFO",
        "CODEX_CLI_PATH": "/Users/user/.nvm/versions/node/v22.13.0/bin/codex"
      }
    },
    "time": {
      "command": "uvx",
      "args": [
        "mcp-server-time",
        "--local-timezone",
        "Europe/Istanbul"
      ]
    }
  }
}